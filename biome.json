{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
  },
  "files": {
      "ignoreUnknown": true,
      "includes": [
          "apps/web/**/*.{ts,tsx}",
          "apps/api/**/*.ts",
          "packages/**/*.{ts,tsx}"
      ]
  },
  "formatter": {
      "enabled": true,
      "indentStyle": "tab",
      "lineEnding": "lf",
      "lineWidth": 100
  },
  "linter": {
      "enabled": true,
      "rules": {
          "recommended": true,
          "correctness": {
              "useExhaustiveDependencies": "warn",
              "noUnusedVariables": "warn",
              "noUnusedImports": "warn"
          },
          "style": {
              "noNonNullAssertion": "warn",
              "useConst": "error",
              "useNodejsImportProtocol": "error"
          },
          "suspicious": {
              "noExplicitAny": "warn",
              "noConsole": "off"
          },
          "complexity": {
              "noForEach": "off"
          },
          "nursery": {
              "useSortedClasses": "warn"
          }
      }
  },
  "javascript": {
      "formatter": {
          "quoteStyle": "double",
          "semicolons": "asNeeded",
          "trailingCommas": "es5",
          "arrowParentheses": "always"
      },
      "jsxRuntime": "reactClassic"
  },
  "json": {
      "formatter": {
          "enabled": true,
          "indentStyle": "space",
          "indentWidth": 2
      }
  },
  "css": {
      "parser": {
          "cssModules": true
      },
      "formatter": {
          "enabled": true,
          "indentStyle": "tab"
      }
  },
  "overrides": [
    {
      "includes": ["apps/web/src/components/form/**/*.{ts,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
