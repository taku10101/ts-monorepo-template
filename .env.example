# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=todo_dev

# Database URL (used by Prisma)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# MinIO Configuration (Development Environment)
# Docker Compose Settings
MINIO_IMAGE=minio/minio:latest
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# MinIO Root Credentials (for Docker container)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# MinIO Client Configuration (Application)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_REGION=us-east-1
MINIO_MAX_FILE_SIZE=10485760  # 10MB in bytes (10 * 1024 * 1024)

# Storage Backend Selection
# Options: "minio" (default for development) or "s3" (production with IAM role support)
STORAGE_BACKEND=minio

# Production AWS S3 Configuration (when using STORAGE_BACKEND=s3)
# AWS credentials are automatically loaded from:
# 1. IAM role (recommended for production - no keys needed)
# 2. Environment variables (AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY)
# 3. AWS credentials file (~/.aws/credentials)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Node Environment
NODE_ENV=development
PORT=3001
